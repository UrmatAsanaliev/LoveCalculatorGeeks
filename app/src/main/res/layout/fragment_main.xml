<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.MainFragment">

    <TextView
        android:id="@+id/logo"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40sp"
        android:layout_marginHorizontal="20dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:text="Love Calculator"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txt_result"
        android:textColor="@color/white"
        android:textSize="100sp"
        android:text="0"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@id/logo"
        app:layout_constraintStart_toStartOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/ed_fname"
        android:textColor="@color/red"
        android:hint="Напишите первое имя"
        android:padding="12dp"
        android:background="@drawable/bg_edit"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintTop_toBottomOf="@id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/ed_sname"
        android:textColor="@color/red"
        android:hint="Напишите второе имя"
        android:padding="12dp"
        android:background="@drawable/bg_edit"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintTop_toBottomOf="@id/ed_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_calculate"
        android:textSize="20sp"
        android:text="Calculate"
        android:textColor="@color/red"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/white"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/ed_sname"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>